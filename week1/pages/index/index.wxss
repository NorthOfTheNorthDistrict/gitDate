/**index.wxss**/

view{
  display: flex;
}
.all{
  display:flex;
  flex-direction: column;
  flex-wrap: nowrap;
  /* justify-content: space-between; */
  align-items: center;
  flex-grow: 1;
  background-color: rgb(224, 224, 224);
  width: 100%;
  height: 100%;
  padding-top: 140rpx;
}
/* 第一块 */
.v1{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  opacity:inherit;
