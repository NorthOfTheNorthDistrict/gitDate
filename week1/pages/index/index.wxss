  height: 280rpx;
  /* border-style: solid; */
  /* border-color: lightcoral; */
  color:white;
}
.head{
  display: flex;
  flex-direction: row;
}
.head_img{
  width: 100rpx;
  height: 100rpx; 
  border: solid;
  border-color:inherit;
  border-radius: 50%;
  margin-right:20rpx;
}
.head_msg{
  flex-direction: column;
}
.msg{
  display: flex;
